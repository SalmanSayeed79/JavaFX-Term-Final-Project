<?import javafx.scene.text.Font?>
<HBox fx:controller="ComponentController.SalarySearchController" fx:id="searchBarContainer" alignment="CENTER_LEFT" spacing="50" prefHeight="100.0" prefWidth="1520.0"
      style="-fx-background-color: transperant; -fx-background: transperant;" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox prefHeight="100.0" prefWidth="40.0" />
        <HBox prefHeight="100.0" prefWidth="700" alignment="CENTER_LEFT" spacing="50">
            <TextField fx:id="lowerNumber" prefHeight="60" prefWidth="300" alignment="CENTER" promptText="Enter Salary Lower Bound" styleClass="search-text-field" stylesheets="@../Styles/style.css">
                <font>
                    <Font name="Oswald Regular" size="25.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </TextField>
            <TextField fx:id="upperNumber" prefHeight="60" prefWidth="300" alignment="CENTER" promptText="Enter Salary Upper Bound" styleClass="search-text-field" stylesheets="@../Styles/style.css">
                <font>
                    <Font name="Oswald Regular" size="25.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </TextField>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0">
            <children>
                <Button onAction="#searchSalary" mnemonicParsing="false" prefHeight="60.0" prefWidth="100.0" styleClass="search-button" stylesheets="@../Styles/style.css" text="Search">
                    <font>
                        <Font name="Oswald Regular" size="20.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </children>
        </HBox>
    </children>
</HBox>
