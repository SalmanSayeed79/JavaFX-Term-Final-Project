<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:controller="ComponentController.PlayerCardController" prefHeight="225.0" prefWidth="350.0" style="-fx-padding: 10; -fx-background-color: white;" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="200.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="playerImage" fitHeight="100.0" fitWidth="200.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="10.0" prefHeight="125.0" prefWidth="200.0">
               <children>
                  <Label fx:id="playerName" prefHeight="32.0" prefWidth="200.0" text="Hector Belerin" wrapText="true">
                     <font>
                        <Font name="Oswald Medium" size="22.0" />
                     </font>
                  </Label>
                  <Label fx:id="playerPosition" layoutX="10.0" layoutY="10.0" prefHeight="32.0" prefWidth="200.0" text="Defender">
                     <font>
                        <Font name="Oswald Regular" size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="playerNumber" layoutX="10.0" layoutY="42.0" prefHeight="50.0" prefWidth="200.0" text="25">
                     <font>
                        <Font name="Oswald SemiBold" size="30.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="150.0">
         <children>
            <VBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="playerFlag" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">

                  </ImageView>
               </children>
            </VBox>
            <VBox prefHeight="125.0" prefWidth="200.0">
               <children>
                  <Label fx:id="playerHeight" alignment="CENTER_RIGHT" prefHeight="32.0" prefWidth="200.0" text="1.92 m">
                     <font>
                        <Font name="Oswald Medium" size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="playerAge" alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="32.0" prefWidth="200.0" text="30 yrs">
                     <font>
                        <Font name="Oswald Regular" size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="playerSalary" alignment="CENTER_RIGHT" layoutX="10.0" layoutY="42.0" prefHeight="32.0" prefWidth="200.0" text="\$350000">
                     <font>
                        <Font name="Oswald Regular" size="20.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</HBox>
